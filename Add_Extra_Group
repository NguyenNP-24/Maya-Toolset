import maya.cmds as cmds

def insert_extra_group():
    sel = cmds.ls(selection=True)
    if not sel:
        cmds.warning("Please select a controller first.")
        return
    
    ctrl = sel[0]
    extra_grp = ctrl + "_Extra"
    
    # Check if the extra group already exists
    if cmds.objExists(extra_grp):
        cmds.warning("Group %s already exists!" % extra_grp)
        return
    
    # Get the current parent of the controller (if any)
    parent = cmds.listRelatives(ctrl, parent=True)
    
    # Create a new group at the controller's position
    grp = cmds.group(empty=True, name=extra_grp)
    const = cmds.parentConstraint(ctrl, grp, mo=False)
    cmds.delete(const)
    
    # If controller has a parent, re-parent the new group under it
    if parent:
        cmds.parent(grp, parent[0])
    
    # Parent the controller under the new group
    cmds.parent(ctrl, grp)
    
    print("Inserted extra group for %s: %s" % (ctrl, grp))

# Run function
insert_extra_group()
